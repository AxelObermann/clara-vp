<div class="site-menubar">
	<div class="site-menubar-body">
		<div>
			<div>
				<ul class="site-menu" data-plugin="menu">
					<li class="site-menu-item {% if app.request.pathinfo  == path("dashboard")  %} active {% endif %}">
						<a class="animsition-link" href="{{ path("dashboard") }}">
							<i class="site-menu-icon md-view-dashboard" aria-hidden="true"></i>
							<span class="site-menu-title">Dashboard</span>
						</a>
					</li>
					{% if is_granted('ROLE_PORTAL_ADMIN') %}
						<li class="site-menu-category">ROOT</li>
						<li class="site-menu-item has-sub">
							<a href="javascript:void(0)">
								<i class="site-menu-icon icon md-code-setting" aria-hidden="true"></i>
								<span class="site-menu-title"> Importer</span>
								<span class="site-menu-arrow"></span>
							</a>
							<ul class="site-menu-sub">
								<li class="site-menu-item">
									<a class="animsition-link" href="{{ path("importUsers") }}">
										<span class="site-menu-title">Import Users</span>
									</a>
								</li>
								<li class="site-menu-item">
									<a class="animsition-link" href="{{ path("importCalendars") }}">
										<span class="site-menu-title">Import Calendars</span>
									</a>
								</li>
							</ul>
						</li>
					{% endif %}
					{% if is_granted('ROLE_ADMIN') %}
						<li class="site-menu-category">Admin</li>
						<li class="site-menu-item {% if app.request.pathinfo  == path("benutzerindex")  %} active {% endif %}">
							<a class="animsition-link" href="{{ path("benutzerindex") }}">
								<i class="site-menu-icon icon md-pin-account" aria-hidden="true"></i>
								<span class="site-menu-title">Benutzer</span>
							</a>
						</li>
					{% endif %}
					{% if is_granted('ROLE_PORTAL_USER') %}
						<li class="site-menu-category">General</li>
						<li class="site-menu-item">
							<a class="animsition-link" href="">
								<i class="site-menu-icon icon md-calendar" aria-hidden="true"></i>
								<span class="site-menu-title">Kalender</span>
							</a>
						</li>
						<li class="site-menu-item">
							<a class="animsition-link" href="">
								<i class="site-menu-icon icon md-sun" aria-hidden="true"></i>
								<span class="site-menu-title">Solar</span>
							</a>
						</li>
					{% endif %}
				</ul>
