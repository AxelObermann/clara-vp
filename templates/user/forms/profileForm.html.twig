<form class="body" enctype="multipart/form-data" name="profileForm" action="{{ path("user_edit") }}" method="post">
	<input type="hidden" name="typ" value="profile">
	<input type="hidden" name="id" value="{{ profile.id }}">
	<div class="row row-lg">
		<div class="col-lg-4 col-md-4">
			<div class="form-group">
				<span class="text-help">Vorname</span>
				<input type="text" name="Vorname" value="{{ profile.firstName }}" class="form-control round" placeholder="Vorname">
			</div>
		</div>
		<div class="col-lg-4 col-md-4">
			<div class="form-group">
				<span class="text-help">Nachname</span>
				<input type="text" name="Nachname" value="{{ profile.lastName }}" class="form-control round" placeholder="Nachname">
			</div>
		</div>
		<div class="col-lg-4 col-md-4">
			<div class="form-group">
				<span class="text-help">Firma</span>
				<input type="text" name="Firma" value="{{ profile.firma }}" class="form-control round" placeholder="Firma">
			</div>
		</div>
		<div class="col-lg-6 col-md-6">
			<div class="form-group">
				<span class="text-help">Steuernummer</span>
				<input type="text" name="Steuernummer" value="{{ profile.steuernummer }}" class="form-control round" placeholder="Steuernummer">
			</div>
		</div>
		<div class="col-lg-6 col-md-6">
			<div class="form-group">
				<span class="text-help">Finanzamt</span>
				<input type="text" name="Finanzamt" value="{{ profile.finanzamt }}" class="form-control round" placeholder="Finanzamt">
			</div>
		</div>
		<div class="col-lg-4 col-md-4">
			<div class="form-group">
				<span class="text-help">IBAN</span>
				<input type="text" name="IBAN" class="form-control round" value="{{ profile.iban }}" placeholder="IBAN">
			</div>
		</div>
		<div class="col-lg-4 col-md-4">
			<div class="form-group">
				<span class="text-help">BIC</span>
				<input type="text" name="BIC" value="{{ profile.bic }}" class="form-control round" placeholder="BIC">
			</div>
		</div>
		<div class="col-lg-4 col-md-4">
			<div class="form-group">
				<span class="text-help">Bank</span>
				<input type="text" name="Bank" value="{{ profile.bank }}" class="form-control round" placeholder="Bank">
			</div>
		</div>
		<div class="col-lg-4 col-md-4">
			<div class="form-group">
				<span class="text-help">Telefon</span>
				<input type="text" name="Telefon" value="{{ profile.telefon }}" class="form-control round" placeholder="Telefon">
			</div>
		</div>
		<div class="col-lg-4 col-md-4">
			<div class="form-group">
				<span class="text-help">PLZ</span>
				<input type="text" name="PLZ" value="{{ profile.plz }}" class="form-control round" placeholder="PLZ">
			</div>
		</div>
		<div class="col-lg-4 col-md-4">
			<div class="form-group">
				<span class="text-help">Ort</span>
				<input type="text" name="Ort" value="{{ profile.ort }}" class="form-control round" placeholder="Ort">
			</div>
		</div>
		<div class="col-lg-12 col-md-12">
			<div class="form-group">
				<span class="text-help">Strasse / Hausnummer</span>
				<input type="text" name="Strasse" value="{{ profile.strassenr }}" class="form-control round" placeholder="Strasse / Hausnummer">
			</div>
		</div>
		<div class="col-lg-12 col-md-12">
			<div class="form-group">
				<span class="text-help">Signatur</span>
				<textarea rows="4" name="Signatur" value="{{ profile.signatur }}" type="text" class="form-control " placeholder="Signatur"></textarea>
			</div>
		</div>
	</div>
	<button type="submit" class="btn btn-round btn-warning text-black-50">Speichern</button> &nbsp;&nbsp;
</form>