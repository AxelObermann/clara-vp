{% extends '/index.html.twig' %}

{% block body %}
	<div class="page-aside">
		<div class="page-aside-switch">
			<i class="icon wb-chevron-left" aria-hidden="true"></i>
			<i class="icon wb-chevron-right" aria-hidden="true"></i>
		</div>
		<div class="page-aside-inner page-aside-scroll">
			<div data-role="container">
				<div data-role="content">
					<div class="page-aside-section">
						<div class="list-group">
							<a class="list-group-item list-group-item-action active" href="javascript:void(0)">
								<span class="badge badge-pill badge-danger">6</span>
								<i class="icon wb-inbox" aria-hidden="true"></i> Inbox
							</a>
							<a class="list-group-item" href="javascript:void(0)">
								<i class="icon wb-envelope" aria-hidden="true"></i>
								Sent
							</a>
							<a class="list-group-item" href="javascript:void(0)">
								<span class="badge badge-pill badge-info">2</span>
								<i class="icon wb-edit" aria-hidden="true"></i> Draft
							</a>
							<a class="list-group-item" href="javascript:void(0)">
								<i class="icon wb-star" aria-hidden="true"></i>
								Important
							</a>
							<a class="list-group-item" href="javascript:void(0)">
								<i class="icon wb-trash" aria-hidden="true"></i>
								Trash
							</a>
						</div>
					</div>
					<div class="page-aside-section">
						<h5 class="page-aside-title">LABEL</h5>
						<div class="list-group has-actions">
							<div class="list-group-item" data-plugin="editlist">
								<div class="list-content">
									<i class="item-right wb-medium-point red-600" aria-hidden="true"></i>
									<span class="list-text">Work</span>
									<div class="item-actions">
										<span class="btn btn-pure btn-icon" data-toggle="list-editable"><i class="icon wb-edit" aria-hidden="true"></i></span>
