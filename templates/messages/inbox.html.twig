		<div class="page-header" style="background-color: #f19408;">
			<h1 class="page-title">Mailbox</h1>
			<div class="page-header-actions">
				<form>
					<div class="input-search input-search-dark">
						<i class="input-search-icon wb-search" aria-hidden="true"></i>
						<input type="text" class="form-control" name="" placeholder="Search...">
					</div>
				</form>
			</div>
		</div>
		<div id="mailContent" class="page-content page-content-table" data-plugin="selectable">
			
			
			
			<!-- Mailbox -->
			<table id="mailboxTable" class="table" data-plugin="animateList" data-animate="fade" data-child="tr">
				<tbody>
				{% for nachricht in messages %}
					<tr id="mid_{{ nachricht.id }}" data-url="panel.tpl" data-toggle="slidePanel">
						<td class="cell-60">
                  <span class="checkbox-custom checkbox-primary checkbox-lg">
                    <input type="checkbox" class="mailbox-checkbox selectable-item" id="mail_mid_{{ nachricht.id }}"
					/>
                    <label for="mail_mid_{{ nachricht.id }}"></label>
                  </span>
						</td>
						<td class="cell-30 responsive-hide">
                  <span class="checkbox-important checkbox-default">
                    <input type="checkbox" class="mailbox-checkbox mailbox-important" id="mail_mid_{{ nachricht.id }}_important"
					/>
                    <label for="mail_mid_{{ nachricht.id }}_important"></label>
                  </span>
						</td>
						<td class="cell-60 responsive-hide">
							<a class="avatar" href="javascript:void(0)">
								<img class="img-fluid" src="{{ nachricht.transmitter.profile.logo }}" alt="...">
							</a>
						</td>
						<td>
							<div class="content">
								<div class="title">{{ nachricht.transmitter.displayName }}</div>
								<div class="abstract">{{ nachricht.subject }}</div>
							</div>
						</td>
						<td class="cell-30 responsive-hide">
						</td>
						<td class="cell-130">
							<div class="time">{{ nachricht.created|ago }}</div>
							<div class="identity"><i class="icon wb-medium-point red-600" aria-hidden="true"></i>{{ nachricht.messageType }}</div>
						</td>
					</tr>
				{% endfor %}
				
				</tbody>
			</table>
